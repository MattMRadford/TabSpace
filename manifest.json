{
  "manifest_version": 3,
  "name": "TabSpace",
  "version": "1.0",
  "description": "AI-powered tab workspace with focus mode and session control.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "tabGroups"
  ],
  "commands": {
    "open-workspace": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Open TabSpace Workspace"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_def.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon_def.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}

